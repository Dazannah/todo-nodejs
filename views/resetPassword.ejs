<%- include('includes/header', {logedout: true})%>
<div class="w-full h-screen flex flex-col items-center px-4">
  <div class="max-w-xl mx-auto">
    <h3 class="my-3 text-4xl font-semibold">Reset password</h3>
  </div>

  <form>
    <input id="password" name="password" type="password" placeholder="New password" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-blue-600 shadow-sm rounded-lg" />
    <input id="passwordConfirmation" name="passwordConfirmation" type="password" placeholder="Confirm new password" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-blue-600 shadow-sm rounded-lg" />
    <button id="sendButton" hx-post="" hx-target="body" class="w-full px-4 py-2 my-3 text-white bg-blue-600 rounded-lg duration-150 hover:bg-blue-700 active:shadow-lg">Send</button>
    <div class="max-w-md mx-auto h-screen flex flex-col items-center px-4"><% if(typeof messages != "undefined"){ messages.forEach(message =>{%> <span class="my-1"><%= message %></span><% }) } %></div>

    <script>
      const sendButton = document.getElementById("sendButton")
      const currentUrl = window.location.pathname

      sendButton.setAttribute("hx-post", currentUrl)
    </script>
  </form>
</div>

<%- include('includes/footer')%>

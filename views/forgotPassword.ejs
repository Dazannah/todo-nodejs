<%- include('includes/header', {logedout: true})%>

<main class="w-full h-screen flex flex-col items-center px-4">
  <form>
    <div class="mx-auto text-gray-600">
      <h3 class="text-gray-800 mb-5 text-2xl font-bold sm:text-3xl">Need new password?</h3>
      <label class="font-medium"> Username </label>
      <div class="flex items-center text-gray-400 border rounded-md">
        <input id="username" name="username" type="text" id="username" class="w-full p-2.5 ml-2 bg-transparent outline-none" />
        <div class="px-3 py-2.5 text-white rounded-md bg-blue-600 hover:bg-blue-700 border-r"><button hx-post="/forgot-password" hx-target="body">Submit</button></div>
      </div>
      <% if(typeof message != "undefined") {%> <%= message %> <% } %> <%- include('includes/footer')%>
    </div>
  </form>
</main>

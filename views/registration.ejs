<%- include('includes/header')%>
<form action="/registration" method="POST">
  <input type="text" name="username" id="username" value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="Username" />
  <br />
  <input type="text" name="email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Email address" />
  <br />
  <input type="password" name="password" id="password" placeholder="Password" /><br />
  <input type="password" name="passwordConfirmation" id="passwordConfirmation" placeholder="Confirm your password" /><br /><br />
  <input type="submit" value="Submit" /><br /><br />
  <a href="/login">Login</a><br /><br />

  <% if(typeof errors != 'undefined'){ errors.forEach(error=>{%>
  <span><%= error %></span><br />
  <%}) }%>
</form>
<%- include('includes/footer')%>

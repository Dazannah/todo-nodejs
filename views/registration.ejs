<%- include('includes/header', {logedout: true})%>
<main class="w-full h-screen flex flex-col items-center px-4">
  <div class="max-w-xl mx-auto">
    <h3 class="my-3 text-4xl font-semibold">Registration</h3>
  </div>
  <div class="max-w-sm w-full text-gray-600">
    <form action="/registration" method="POST">
      <label class="font-medium"> Username </label>
      <input type="text" name="username" id="username" value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="Username" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-blue-600 shadow-sm rounded-lg" />
      <label class="font-medium"> Email address </label>
      <input type="text" name="email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Email address" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-blue-600 shadow-sm rounded-lg" />
      <label class="font-medium"> Password </label>
      <input type="password" name="password" id="password" placeholder="Password" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-blue-600 shadow-sm rounded-lg" />
      <label class="font-medium"> Confirm password </label>
      <input type="password" name="passwordConfirmation" id="passwordConfirmation" placeholder="Confirm your password" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-blue-600 shadow-sm rounded-lg" />
      <input type="submit" value="Submit" class="w-full px-4 my-3 py-2 text-white font-medium bg-blue-600 hover:bg-blue-500 active:bg-blue-600 rounded-lg duration-150 cursor-pointer" />
      <div class="max-w-md mx-auto h-screen flex flex-col items-center px-4"><a href="/login" class="hover:text-blue-600">Already have account?</a></div>

      <div class="max-w-md mx-auto h-screen flex flex-col items-center px-4"><% if(typeof messages != "undefined"){ messages.forEach(message =>{%> <span class="my-1"><%= message %></span><% }) } %></div>
    </form>
  </div>
</main>
<%- include('includes/footer')%>

<%- include('includes/header', {logedout: true})%>
<body>
  <main class="w-full h-screen flex flex-col items-center px-4">
    <div class="max-w-sm w-full text-gray-600">
      <div class="text-center">
        <div class="mt-5 space-y-2">
          <h3 class="text-gray-800 text-2xl font-bold sm:text-3xl">Log in to your account</h3>
          <p class="">Don't have an account? <a href="/registration" class="font-medium text-blue-600 hover:text-blue-500">Sign up</a></p>
        </div>
      </div>
      <form action="/login" method="POST">
        <div>
          <label class="font-medium"> Username </label>
          <input type="text" name="username" required class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-blue-600 shadow-sm rounded-lg" value="<%= typeof username != 'undefined' ? username : '' %>" />
        </div>
        <div>
          <label class="font-medium"> Password </label>
          <input type="password" name="password" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-blue-600 shadow-sm rounded-lg" />
        </div>
        <button class="w-full px-4 my-3 py-2 text-white font-medium bg-blue-600 hover:bg-blue-500 active:bg-blue-600 rounded-lg duration-150">Sign in</button>
        <div class="text-center">
          <% if(typeof errors != 'undefined'){ errors.forEach(error=>{%>
          <span><%= error %></span><br />
          <%}) %> <br /><% }%>
          <a href="/forgot-password" class="hover:text-blue-600">Forgot password?</a>
        </div>
      </form>
    </div>
  </main>
</body>

<%- include('includes/footer')%>
